{
	"name": "better-captcha",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"build:packages": "turbo run build --filter=@better-captcha/core --filter=@better-captcha/react --filter=@better-captcha/vue --filter=@better-captcha/svelte --filter=@better-captcha/solidjs --filter=@better-captcha/qwik --filter=@better-captcha/lit --filter=packages/*",
		"build:testing": "turbo run build --filter=apps/testing/*",
		"build:examples": "turbo run build --filter=apps/examples/*",
		"dev:react": "turbo run dev --filter=@better-captcha/react --filter=apps/testing/react",
		"dev:solid": "turbo run dev --filter=@better-captcha/solidjs --filter=apps/testing/solidjs",
		"dev:vue": "turbo run dev --filter=@better-captcha/vue --filter=apps/testing/vue",
		"dev:qwik": "turbo run dev --filter=@better-captcha/qwik --filter=apps/testing/qwik",
		"dev:lit": "turbo run dev --filter=@better-captcha/lit --filter=apps/testing/lit",
		"dev:docs": "turbo run dev --filter=@better-captcha/docs",
		"format": "biome format --write",
		"lint": "turbo run lint",
		"start": "turbo run start",
		"changeset": "changeset",
		"ci:version": "changeset version && bun update",
		"ci:publish": "for dir in packages/core packages/react packages/vue packages/svelte packages/solidjs packages/qwik packages/lit packages/preact; do (cd \"$dir\" && bun publish --access public || true); done && changeset tag"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@changesets/changelog-github": "^0.5.2",
		"@changesets/cli": "^2.29.8",
		"ts-morph": "^27.0.2",
		"turbo": "^2.7.4",
		"typescript": "5.9.3"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "bun@1.3.0",
	"workspaces": [
		"apps/*",
		"apps/testing/*",
		"apps/examples/*",
		"packages/*"
	]
}
