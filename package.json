{
	"name": "better-captcha",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"build:packages": "turbo run build --filter=@better-captcha/core --filter=@better-captcha/react --filter=@better-captcha/solidjs --filter=@better-captcha/vue",
		"build:apps": "turbo run build --filter=apps/*",
		"dev": "turbo run dev",
		"dev:react": "turbo run dev --filter=@better-captcha/react",
		"dev:solid": "turbo run dev --filter=@better-captcha/solidjs",
		"dev:vue": "turbo run dev --filter=@better-captcha/vue",
		"lint": "turbo run lint",
		"start": "turbo run start",
		"format": "biome format --write && prettier --write \"**/*.svelte\"",
		"format:check": "biome format && prettier --check \"**/*.svelte\"",
		"check-types": "turbo run check-types"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"turbo": "^2.5.5",
		"typescript": "5.9.3"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "bun@1.3.0",
	"workspaces": [
		"apps/*",
		"apps/testing/*",
		"packages/*"
	]
}
