{
	"name": "@better-captcha/solid",
	"description": "SolidJS wrappers for CAPTCHA providers that share the same lifecycle, render flow, and control handle so you can swap vendors easily.",
	"version": "0.0.1",
	"author": "LuggaPugga",
	"repository": {
		"type": "git",
		"url": "https://github.com/LuggaPugga/better-captcha.git"
	},
	"homepage": "https://github.com/LuggaPugga/better-captcha",
	"license": "MIT",
	"keywords": [
		"captcha",
		"solidjs",
		"recaptcha",
		"hcaptcha",
		"turnstile",
		"friendly-captcha"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"type": "module",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"generate": "bun run scripts/generate-components.ts",
		"build": "tsdown",
		"build:prepare": "bun run generate",
		"build:done": "rm -r src/provider",
		"dev": "bun run scripts/dev.ts"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./base-captcha": {
			"types": "./dist/base-captcha.d.ts",
			"default": "./dist/base-captcha.js"
		},
		"./provider": {
			"types": "./dist/provider/index.d.ts",
			"default": "./dist/provider/index.js"
		},
		"./provider/*": {
			"types": "./dist/provider/*/*.d.ts",
			"default": "./dist/provider/*/*.js"
		},
		"./package.json": "./package.json"
	},
	"typesVersions": {
		"*": {
			"base-captcha": [
				"dist/base-captcha.d.ts"
			],
			"provider": [
				"dist/provider/index.d.ts"
			]
		}
	},
	"peerDependencies": {
		"typescript": "^5.9.2",
		"solid-js": "^1.9.0"
	},
	"devDependencies": {
		"@better-captcha/tests": "workspace:*",
		"@playwright/test": "^1.56.0",
		"@better-captcha/core": "workspace:*",
		"solid-js": "^1.9.0",
		"playwright": "^1.56.0",
		"tsdown": "^0.15.6",
		"@types/bun": "1.3.0",
		"@types/node": "24.7.2"
	}
}
