{
	"name": "@better-captcha/solidjs",
	"description": "SolidJS wrappers for CAPTCHA providers that share the same lifecycle, render flow, and control handle so you can swap vendors easily.",
	"version": "0.1.2",
	"author": "LuggaPugga",
	"repository": {
		"type": "git",
		"url": "https://github.com/LuggaPugga/better-captcha.git"
	},
	"homepage": "https://better-captcha.dev",
	"license": "MIT",
	"keywords": [
		"captcha",
		"solidjs",
		"recaptcha",
		"hcaptcha",
		"turnstile",
		"friendly-captcha"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"type": "module",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rolldown -c",
		"dev": "rolldown -c --watch"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./base-captcha": {
			"types": "./dist/base-captcha.d.ts",
			"default": "./dist/base-captcha.js"
		},
		"./provider": {
			"types": "./dist/provider/index.d.ts",
			"default": "./dist/provider/index.js"
		},
		"./provider/*": {
			"types": "./dist/provider/*/index.d.ts",
			"default": "./dist/provider/*/index.js"
		},
		"./package.json": "./package.json"
	},
	"typesVersions": {
		"*": {
			"base-captcha": [
				"dist/base-captcha.d.ts"
			],
			"provider": [
				"dist/provider/index.d.ts"
			],
			"provider/*": [
				"dist/provider/*/index.d.ts"
			]
		}
	},
	"peerDependencies": {
		"typescript": "^5.9.3",
		"solid-js": "^1.9.0"
	},
	"dependencies": {
		"@better-captcha/core": "workspace:*"
	},
	"devDependencies": {
		"@better-captcha/tests": "workspace:*",
		"@playwright/test": "^1.56.1",
		"@types/bun": "1.3.0",
		"@types/node": "24.8.1",
		"playwright": "^1.56.1",
		"rolldown": "^1.0.0-beta.43",
		"rolldown-plugin-dts": "^0.16.12",
		"rolldown-plugin-solid": "^0.2.1",
		"solid-js": "^1.9.9"
	}
}
