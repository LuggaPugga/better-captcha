{
	"name": "@better-captcha/lit",
	"description": "Lit wrappers for CAPTCHA providers that share the same lifecycle, render flow, and control handle so you can swap vendors easily.",
	"version": "0.5.2",
	"author": "LuggaPugga",
	"repository": {
		"type": "git",
		"url": "https://github.com/LuggaPugga/better-captcha.git"
	},
	"homepage": "https://better-captcha.dev",
	"license": "MIT",
	"keywords": [
		"captcha",
		"lit",
		"web-components",
		"recaptcha",
		"hcaptcha",
		"turnstile",
		"friendly-captcha"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"type": "module",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./base-captcha": {
			"types": "./dist/base-captcha.d.ts",
			"default": "./dist/base-captcha.js"
		},
		"./provider": {
			"types": "./dist/provider/index.d.ts",
			"default": "./dist/provider/index.js"
		},
		"./provider/*": {
			"types": "./dist/provider/*/index.d.ts",
			"default": "./dist/provider/*/index.js"
		},
		"./package.json": "./package.json"
	},
	"typesVersions": {
		"*": {
			"base-captcha": [
				"dist/base-captcha.d.ts"
			],
			"provider": [
				"dist/provider/index.d.ts"
			],
			"provider/*": [
				"dist/provider/*/index.d.ts"
			]
		}
	},
	"peerDependencies": {
		"typescript": "^5.0.0",
		"lit": "^3.0.0"
	},
	"dependencies": {
		"@better-captcha/core": "workspace:^",
		"lit": "^3.0.0"
	},
	"devDependencies": {
		"@better-captcha/tests": "workspace:*",
		"@playwright/test": "^1.56.0",
		"@types/bun": "1.3.5",
		"@types/node": "25.0.3",
		"playwright": "^1.56.0",
		"ts-morph": "^27.0.2",
		"tsdown": "^0.18.0",
		"unplugin": "^2.3.10"
	}
}
