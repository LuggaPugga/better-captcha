{
	"name": "react-captcha",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"type": "module",
	"types": "./dist/index.d.ts",
	"license": "MIT",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./base-captcha": {
			"types": "./dist/base-captcha.d.ts",
			"default": "./dist/base-captcha.js"
		},
		"./provider": {
			"types": "./dist/provider.d.ts",
			"default": "./dist/provider.js"
		},
		"./provider/*": {
			"types": "./dist/provider/*/index.d.ts",
			"default": "./dist/provider/*/index.js"
		},
		"./utils/load-script": {
			"types": "./dist/utils/load-script.d.ts",
			"default": "./dist/utils/load-script.js"
		},
		"./package.json": "./package.json"
	},
	"typesVersions": {
		"*": {
			"base-captcha": [
				"dist/base-captcha.d.ts"
			],
			"provider": [
				"dist/provider.d.ts"
			],
			"provider/*": [
				"dist/provider/*/index.d.ts"
			],
			"utils/load-script": [
				"dist/utils/load-script.d.ts"
			]
		}
	},
	"peerDependencies": {
		"typescript": "^5.9.2",
		"react": "^19.0.0"
	},
	"devDependencies": {
		"tsdown": "^0.15.6",
		"@types/react": "^19.0.0"
	}
}
